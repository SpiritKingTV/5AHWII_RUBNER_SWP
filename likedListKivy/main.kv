
BoxLayout:
    orientation:"vertical"
    MDToolbar:
        title:"Ãœbung Linked-List"
    MDBottomNavigation:
        MDBottomNavigationItem:
            name:"main_creen"
            icon:"home"
            text:"Home"
            MainScreen:
        MDBottomNavigationItem:
            name:"ll_screen"
            icon:"filter-variant"
            text:"Linked List"
            LinkedListScreen:
        MDBottomNavigationItem:
            name:"al_screen"
            icon:"code-array"
